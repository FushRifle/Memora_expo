{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ],
      "types": [
        "tamagui"
      ]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "tamagui.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/__rsc_tests__/*"
  ]
}